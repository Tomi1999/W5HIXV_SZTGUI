<Window x:Class="W5HIXV.WpfClient.SiteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W5HIXV.WpfClient"
        mc:Ignorable="d"
        Title="SiteWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:SiteWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSite}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Address}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" >
            <Label Content="Address" Background="Coral" Padding="10" Margin="10, 10, 10, 0"/>
            <TextBox Text="{Binding SelectedSite.Address}" Padding="10" Margin="10, 0, 10, 0"/>
            <Label Content="Size" Background="Coral" Padding="10" Margin="10, 0, 10, 0"/>
            <TextBox Text="{Binding SelectedSite.Size}" Padding="10" Margin="10, 0, 10, 0"/>
            <Label Content="City" Background="Coral" Padding="10" Margin="10, 0, 10, 0"/>
            <TextBox Text="{Binding SelectedSite.City}" Padding="10" Margin="10, 0, 10, 10"/>

            <Button Content="Create Site" Command="{Binding CreateSiteCarCommand}" Margin="10" Padding="10"/>
            <Button Content="Update Site" Command="{Binding UpdateSiteCommand}" Margin="10" Padding="10"/>
            <Button Content="Delete Site" Command="{Binding DeleteSiteCommand}" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
