<Window x:Class="W5HIXV.WpfClient.DriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W5HIXV.WpfClient"
        mc:Ignorable="d"
        Title="DriverWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:DriverViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Drivers}" SelectedItem="{Binding SelectedDriver}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" >
            <Label Content="Name" Background="Coral" Padding="10" Margin="10, 10, 10, 0"/>
            <TextBox Text="{Binding SelectedDriver.Name}" Padding="10" Margin="10, 0, 10, 0"/>
            <Label Content="Distance" Background="Coral" Padding="10" Margin="10, 0, 10, 0"/>
            <TextBox Text="{Binding SelectedDriver.Distance}" Padding="10" Margin="10, 0, 10, 20"/>

            <Button Content="Create Site" Command="{Binding CreateDriverCommand}" Margin="10" Padding="10"/>
            <Button Content="Update Site" Command="{Binding UpdateDriverCommand}" Margin="10" Padding="10"/>
            <Button Content="Delete Site" Command="{Binding DeleteDriverCommand}" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
