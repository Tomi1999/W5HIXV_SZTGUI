<Window x:Class="W5HIXV.WpfClient.CarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W5HIXV.WpfClient"
        mc:Ignorable="d"
        Title="CarWindow" Height="450" Width="800">
    <Grid>
        <Button Content="List All" HorizontalAlignment="Left" Margin="34,44,0,0" VerticalAlignment="Top" Height="72" Width="157" FontSize="20" Command="{Binding ListAllCar}"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="34,121,0,0" VerticalAlignment="Top" Height="72" Width="157" FontSize="20" Command="{Binding CreateCar}"/>
        <Button Content="Read" HorizontalAlignment="Left" Margin="34,198,0,0" VerticalAlignment="Top" Height="72" Width="157" FontSize="20" Command="{Binding ReadCar}"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="34,275,0,0" VerticalAlignment="Top" Height="72" Width="157" FontSize="20" Command="{Binding UpdateCar}"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="34,352,0,0" VerticalAlignment="Top" Height="72" Width="157" FontSize="20" Command="{Binding DeleteCar}"/>

    </Grid>
</Window>
